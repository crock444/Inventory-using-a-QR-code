<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#9E01AFA8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/_111111"
        />
    <EditText
        android:id="@+id/edName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Имя и фамилия "
        android:inputType="text" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scanner"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/montserrat_regular"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="151dp"
        android:ems="10"
        android:hint="Жалоба"

        android:inputType="text" />

    <Button
        android:id="@+id/scanner"
        android:layout_width="240dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#FE851A"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="QR-Scanner"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_above="@+id/scanner"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="423dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:text="Напишите жалобу на ученика ниже"


        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scanner"
        android:layout_alignTop="@+id/edEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="32dp"
        android:elevation="4dp"
        android:enabled="false"
        android:backgroundTint="#4B6A93"
        android:onClick="onclickSave"
        android:fontFamily="@font/montserrat_bold"
        android:text="Отправить"
        android:textColor="#FFFFFF" />


</RelativeLayout>oknoviti
